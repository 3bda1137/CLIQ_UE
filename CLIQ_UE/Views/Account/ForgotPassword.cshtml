@using CLIQ_UE.ViewModels
@model ForgotPasswordViewModel
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<link href="~/css/style.css" rel="stylesheet" />
	<link rel="icon" href="./images/DefaultImages/fav-icon.svg" type="image/png">
	<title>Forget Password</title>
	@* <link rel="stylesheet" type="text/css" href="css/style.css" /> *@
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
		  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
	<section class="vh-100">
		<div class="container" style="display:flex;align-items:center;justify-content:center;height:100vh">
			<div class="row">
				<div class="col-lg-6 d-flex align-items-center">
					<img src="~/images/DefaultImages/Clique Logo.png" class="w-75 image-flude" />
				</div>
				<div class="col-lg-6 d-flex align-items-center ">
					<form asp-action="ForgotPassword" asp-asp-controller="Account" method="post"  class="loginform  px-5">
						<h3 class="fw-normal" style="letter-spacing: 1px;">Reset Your Password</h3>
						<p class="small text-muted mb-2 mb-3 pb-lg-2">To request a new password, enter your email</p>
						<div asp-validation-summary="All" class="text-danger"></div>
						<div class="form-outline mb-4">
							<label class="form-label" for="formExample">Enter your email </label>
							<input  asp-for="Email" id="formExample" placeholder="Your email address"
								   class="form-control form-control-lg" />
						<span asp-validation-for="Email" class="text-danger"></span>
							   </div>
						<div class="pt-1 mb-4">
							<button style="float: right;" class="Main-btn btn btn-lg px-5 mb-3 bg-info"
									type="submit">
								Continue
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
			integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
			crossorigin="anonymous"></script>
	<partial name="_ValidationScriptsPartial"></partial>
</body>

</html>
