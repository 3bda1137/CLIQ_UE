@using CLIQ_UE.ViewModels
@model ResetPasswordViewModel
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Register</title>
	@* <link rel="stylesheet" type="text/css" href="css/style.css" /> *@
	<link href="~/css/style.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
	<section class="vh-100">
		<div class="container">
			<div class="row">
				<div class="col-lg-6 d-none d-flex align-items-center">
		   <img src="~/images/DefaultImages/Clique Logo.png" class="w-50 image-flude" />
				</div>
				<div class="col-lg-6 col-md-12 d-flex align-items-center justify-content-center ">
					<form asp-action="SaveResetPassword" asp-controller="Account" method="post" class="loginform  px-5">
						<h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign up</h3>
						<div asp-validation-summary="All" class="text-danger"></div>
			
						<div class="form-outline mb-4">
							<label class="form-label" for="formExample">Password</label>
							<input asp-for="Password" id="formExample" placeholder="********" class="form-control form-control-lg" />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="form-outline mb-4">
							<label class="form-label" for="formExample"> Repeat Password</label>
							<input asp-for="ConfirmPassword" id="formExample" placeholder="********" class="form-control form-control-lg" />
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>
		
						<div class="pt-1 mb-4">
							<button class="Main-btn btn btn-lg px-5" type="submit">Reset Password</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
	<partial name="_ValidationScriptsPartial"></partial>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>
</html>
