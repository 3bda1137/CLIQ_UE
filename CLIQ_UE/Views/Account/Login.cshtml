@using CLIQ_UE.ViewModels
@model LoginViewModel
@{
	Layout = "_HomePageLayout";
}
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Login</title>
	@* <link rel="stylesheet" type="text/css" href="css/style.css" /> *@
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
	<section class="vh-100">
		<div class="container">
			<div class="row">
				<div class="col-lg-6 d-flex align-items-center">
					<img src="~/images/clique3.webp"
						 alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
				</div>
				<div class="col-lg-6 d-flex align-items-center ">
					<form asp-action="Login" asp-controller="Account" method="post" class="loginform  px-5">
						<h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>
						<div asp-validation-summary="All" class="text-danger"></div>
						<div class="form-outline mb-4">
							<label class="form-label" for="formExample">Email </label>
							<input asp-for="Email" id="formExample" placeholder="Your email address" class="form-control form-control-lg" />
						</div>
						<div class="form-outline mb-4">
							<label class="form-label" for="formExample">Password</label>
							<input asp-for="Password" id="formExample" placeholder="********" class="form-control form-control-lg" />
						</div>
						<p class="mt-2 mb-2 pb-lg-2"><a asp-action="Forgotpassword" asp-controller="Account">Forgot password?</a></p>
						<div class="text-center mb-3">
							<p>Sign in with:</p>
							<button type="button" class="btn btn-link btn-floating mx-1">
								<i class="fab fa-facebook-f"></i>
							</button>

							<button type="button" class="btn btn-link btn-floating mx-1">
								<i class="fab fa-google"></i>
							</button>

							<button type="button" class="btn btn-link btn-floating mx-1">
								<i class="fab fa-github"></i>
							</button>
						</div>

						<div class="pt-1 mb-4">
							<button type="submit" class="Main-btn btn btn-primary btn-lg"
									style="padding-left: 2.5rem; padding-right: 2.5rem;">
								Login
							</button>
							<a asp-action="Register" asp-controller="Account" style="color: #4385f5;" class="btn btn-lg" type="button">Sign Up</a>
						</div>
					</form>
				</div>
			</div>
		</div>

	</section>
	<partial name="_ValidationScriptsPartial"></partial>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>

</body>
</html>

