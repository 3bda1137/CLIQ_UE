@model List<SearchUserViewModel>

@{
    ViewData["Title"] = "SearchByUserName";
}

<h1>Search Users</h1>

<form id="searchForm">
    <div class="input-group mb-3">
        <input type="text" class="form-control" id="userNameInput" placeholder="Search by user Name">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>

<script>
    $(function () {
        $("#userNameInput").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/HomePage/SearchSuggestions",
                    dataType: "json",
                    data: {
                        term: request.term
                    },
                    success: function (data) {
                        response(data);
                    },
                    error: function () {
                        // Provide user-friendly error message
                        alert('Error occurred while fetching suggestions.');
                    }
                });
            },
            minLength: 1
        });

        $('#searchForm').submit(function (e) {
            e.preventDefault();

            var userName = $('#userNameInput').val();

            $.ajax({
                url: '@Url.Action("GetUserByUserName", "ViewUserProfile")',
                type: 'GET',
                data: { userName: userName },
                success: function (userId) {
                    if (userId) {
                        window.location.href = '@Url.Action("Index", "ViewUserProfile")' + '?userId=' + userId;
                    } else {
                        alert('User not found.');
                    }
                },
                error: function () {
                    // Provide user-friendly error message
                    alert('Error occurred while searching for the user.');
                }
            });
        });
    });
</script>
